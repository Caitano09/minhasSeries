<%- include('../partials/header') %>

<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2>Nova Série</h2>
        <form action="" method="post">

          <div class="form-group">
            <label for="name">Nome da série</label>
            <input name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="nameHelp"
              placeholder="Informe o nome">
            <small id="nameHelp" class="form-text text-muted">Nome da série a ser salvo.</small>
            <% if(errors && errors.indexOf('name') >= 0){ %>
              <small id="nameHelp" class="form-text text-muted">Por favor, informe o nome da série</small>
            <% } %>
          </div>

          <div class="form-group">
            <label for="status">Situação:</label>
            <select class="form-control" id="status" name="status">
              <option value="to-watch">Para Assistir</option>
              <option value="watching">Assistindo</option>
              <option value="watched">Assitido</option>
            </select>
          </div>
          <button class="btn btn-primary">Salvar</button>
          <a class="btn btn-secondary" href="/series">Voltar</a>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>